                        {% endfor %}
                    </ul>
                </div>
            </div>

            {{ form_start(form, {
                attr: {
                    class: app.user.name == message.sender.name
                    ? 'sender'
                    : (app.user.name == message.recipient.name ? 'recipient' : '')
                }
            }) }}

            <div class="file-upload">
